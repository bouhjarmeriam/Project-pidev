<div class="header-container">
    <img src="/images/logo.png" alt="Team Logo" class="team-logo">
    <div class="header-title">Médicaments</div>
</div>

<div class="form-container">
    <div class="form-title">Modifier un médicament</div>

    <form method="post" action="{{ path('app_medicament_edit', {'id': medicament.id}) }}" enctype="multipart/form-data">
        {{ form_start(form) }}

        <!-- Name Field -->
        <div class="form-group">
            {{ form_label(form.nom_medicament, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom_medicament, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.nom_medicament) }}
            </div>
        </div>

        <!-- Description Field -->
        <div class="form-group">
            {{ form_label(form.description_medicament, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description_medicament, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.description_medicament) }}
            </div>
        </div>

        <!-- Type Field -->
        <div class="form-group">
            {{ form_label(form.type_medicament, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type_medicament, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.type_medicament) }}
            </div>
        </div>

        <!-- Price Field -->
        <div class="form-group">
            {{ form_label(form.prix_medicament, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.prix_medicament, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.prix_medicament) }}
            </div>
        </div>

        <!-- Quantity Field -->
        <div class="form-group">
            {{ form_label(form.quantite_stock, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.quantite_stock, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.quantite_stock) }}
            </div>
        </div>

        <!-- Date entrée Field -->
        <div class="form-group">
            {{ form_label(form.date_entree, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date_entree, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.date_entree) }}
            </div>
        </div>

        <!-- Date expiration Field -->
        <div class="form-group">
            {{ form_label(form.date_expiration, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date_expiration, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.date_expiration) }}
            </div>
        </div>

        <!-- Image Field -->
        <div class="form-group">
            {{ form_label(form.image_medicament, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.image_medicament, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.image_medicament) }}
            </div>
        </div>

        <!-- Submit Button -->
        <div class="button-container">
            <button type="submit">Enregistrer les modifications</button>
        </div>

        {{ form_end(form) }}
    </form>
    

    
</div>

