 {% extends 'admin/base.html.twig' %}

{% block title %}Edit Service{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f9; /* Light gray background */
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #2c3e50; /* Dark blue for heading */
            margin-top: 30px;
            font-size: 2em;
        }

        .form-group {
            margin-bottom: 20px;
            padding: 0 20px;
        }

        label {
            font-size: 1.1em;
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
        }

        input[type="text"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        input[type="text"]:focus,
        input[type="number"]:focus,
        textarea:focus {
            border-color: #3498db; /* Blue border on focus */
            outline: none;
        }

        .btn-save {
            background-color: #27ae60; /* Green for save button */
            color: white;
            padding: 10px 20px;
            font-size: 1.1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn-save:hover {
            background-color: #2ecc71; /* Lighter green on hover */
        }

        /* Center the form and make it responsive */
        form {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Responsiveness */
        @media (max-width: 768px) {
            form {
                width: 80%;
            }

            h1 {
                font-size: 1.5em;
            }
        }
    </style>

    <h1>Edit Service</h1>

    <form action="{{ path('app_service_edit', {'id': service.id}) }}" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" value="{{ service.name }}" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" required>{{ service.description }}</textarea>
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" class="form-control" value="{{ service.price }}" required>
        </div>

        <button type="submit" class="btn-save">Save</button>
    </form>
{% endblock %}
