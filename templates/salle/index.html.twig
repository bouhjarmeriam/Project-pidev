{% extends '/departement/base.html.twig' %}

{% block styles %}
<style>
    /* Centrer le tableau */
    .custom-table {
        margin: 0 auto; /* Centre le tableau horizontalement */
        width: 80%; /* Définit la largeur du tableau à 80% de son parent */
    }
     .image-thumbnail {
        width: 30px !important;  /* Taille réduite */
        height: 30px !important;
        object-fit: cover;
        border-radius: 50%;
    }
</style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="container mt-5 text-center">
        <h1 class="text-center mb-4 text-primary">
            <i class="fas fa-list"></i> Liste des Salles
        </h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                <i class="fas fa-check-circle"></i> {{ message }}
            </div>
        {% endfor %}

        {% if salles is empty %}
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-triangle"></i> Aucune salle trouvée.
            </div>
        {% else %}
            <div class="d-flex justify-content-center mb-4">
                <a href="{{ path('salle_add') }}" class="btn btn-success me-3">
                    <i class="fas fa-plus-circle"></i> Ajouter une Salle
                </a>
                <div class="input-group w-50 shadow-sm">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher une salle...">
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered custom-table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Nom</th>
                                    <th>Capacité</th>
                                    <th>Type</th>
                                    <th>Étage</th>
                                    <th>Image</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="sallesList">
                                {% for salle in salles %}
                                    <tr class="salle-row">
                                        <td>{{ salle.nom }}</td>
                                        <td>{{ salle.capacite }}</td>
                                        <td>{{ salle.typeSalle }}</td>
                                        <td>{{ salle.etage ? salle.etage.id : 'Non défini' }}</td>
                                        <td>
                                            {% if salle.image %}
                                                <img src="{{ asset(salle.image) }}" alt="Image" class="image-thumbnail" />
                                            {% else %}
                                                <span>Aucune image</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('salle_edit', {'id': salle.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDeletion('{{ path('salle_delete', {'id': salle.id}) }}', '{{ csrf_token('delete' ~ salle.id) }}')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<!-- Script de recherche -->
<script>
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll(".salle-row");

        rows.forEach(row => {
            let text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? "table-row" : "none";
        });
    });

    // Fonction SweetAlert pour la suppression avec confirmation
    function confirmDeletion(deleteUrl, csrfToken) {
        Swal.fire({
            title: 'Êtes-vous sûr ?',
            text: 'Vous ne pourrez pas revenir en arrière !',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Oui, supprimer !',
            cancelButtonText: 'Annuler',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Créez un formulaire dynamique pour envoyer une requête POST
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = deleteUrl;

                // Créez un champ pour le token CSRF
                const csrfField = document.createElement('input');
                csrfField.type = 'hidden';
                csrfField.name = '_token';
                csrfField.value = csrfToken;
                form.appendChild(csrfField);

                // Ajoutez le formulaire à la page et soumettez-le
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.21/dist/sweetalert2.all.min.js"></script>

{% endblock %}
