 {% extends 'base.html.twig' %}

{% block title %}Edit Consultation{% endblock %}

{% block body %}
    <style>
        /* General styling */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #8B0000, #4682B4); /* Dark red and steel blue gradient */
            color: #333;
            margin: 0;
            padding: 0;
            background-size: cover;
        }

        h1 {
            color: #2d4b61; /* Dark blue */
            text-align: center;
            margin-top: 50px;
        }

        /* Form styling */
        form {
            max-width: 600px;
            margin: 30px auto;
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        button {
            background-color: #0099cc; /* Cool blue */
            color: white;
            border: none;
            padding: 12px 24px;
            font-size: 1em;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-top: 20px;
            width: 100%;
        }

        button:hover {
            background-color: #0077b3; /* Darker blue on hover */
        }

        /* Responsiveness */
        @media (max-width: 768px) {
            form {
                width: 90%;
                padding: 15px;
            }
        }
    </style>

    <h1>Edit Consultation</h1>

    {{ form_start(form) }}
        {{ form_row(form.service) }}
        {{ form_row(form.date) }}
        {{ form_row(form.patientIdentifier) }}
        <button class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}
{% endblock %}
