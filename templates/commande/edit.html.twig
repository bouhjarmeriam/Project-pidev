<div class="header-container">
    <img src="/images/logo.png" alt="Team Logo" class="team-logo">
    <div class="header-title">Modifier une commande</div>
</div>

<div class="form-container">
    <div class="form-title">Modifier la commande</div>

    <form method="post" action="{{ path('app_commande_edit', {id: commande.id}) }}">
        {{ form_start(form) }}

        <!-- Date Commande Field -->
        <div class="form-group">
            {{ form_label(form.dateCommande, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dateCommande, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.dateCommande) }}
            </div>
        </div>

        <!-- Quantité Field -->
        <div class="form-group">
            {{ form_label(form.quantite, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.quantite) }}
            </div>
        </div>

        <!-- Médicaments Field -->
        <div class="form-group">
            {{ form_label(form.medicaments, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.medicaments, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.medicaments) }}
            </div>
        </div>

        <!-- Nouveau Médicament Field -->
        <div class="form-group">
            {{ form_label(form.nouveauMedicament, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nouveauMedicament, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.nouveauMedicament) }}
            </div>
        </div>

        <!-- Fournisseur Field -->
        <div class="form-group">
            {{ form_label(form.fournisseur, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.fournisseur, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.fournisseur) }}
            </div>
        </div>

        

        {{ form_end(form) }}
    </form>
</div>

